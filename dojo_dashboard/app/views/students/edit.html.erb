<h1>Edit <%= @student.first_name %> <%= @student.last_name %></h1>
<form action="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="POST">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type="hidden" name="_method" value="put">
    First Name: <input type="text" name="student[first_name]" value="<%= @student.first_name %>"><br>
    Last Name: <input type="text" name="student[last_name]" value="<%= @student.last_name %>"><br>
    Email Address: <input type="text" name="student[email]" value="<%= @student.email %>"><br>
    Dojo: <select name="student[dojo_id]">
    <%= @dojos.each do |dojo| %>
    <option value="<%= dojo.id %>"><%= dojo.branch %></option>
    <% end %>
    </select><br>
    <input type="Submit" value="Edit Student" style="border-radius:20px; background-color: blue; height: 25px; color: white">
</form>