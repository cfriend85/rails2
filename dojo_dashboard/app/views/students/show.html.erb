<h1><%= @dojo.branch %>'s <%= @student.first_name %> <%= @student.last_name %></h1>
<h2>Email: <%= @student.email %></h2>


<h3>Cohorts:</h3>
<table>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Actions</th>
<% @dojo.students.each do |student| %>
<tr>
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td>
    <td><%= student.email %></td>
    <td><button style="border-radius: 20px; background-color: blue; height: 25px; color: white"><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit" style="color: white; text-decoration: none;">Edit</a></button></td>
    <td><button style="border-radius: 20px; background-color: blue; height: 25px; color: white"><a href="/" style="color: white; text-decoration: none;">Home</a></button></td>
</tr>
<% end %>
</table>