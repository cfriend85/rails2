<h1>Edit <%= @user.first_name %></h1>

<form action="/update/<%= @user.id %>" method="POST">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <% if flash[:errors] %>
            <% flash[:errors].each do |e| %>
        <p style="background-color: rgb(146, 0, 0);color: rgb(153, 153, 0);font-weight: 800;"><%= e %></p>
            <% end %>
        <% end %>
    Name: <input type="text" name="user[first_name]" value="<%= @user.first_name %>"><br>
    Name: <input type="text" name="user[last_name]" value="<%= @user.last_name %>"><br>
    Email: <input type="text" name="user[email]" value="<%= @user.email %>"><br>
    City: <input type= 'text' value="<%= @user.city %>"
    name='user[city]' class="in" style="margin:5px 0px 5px 0px;padding-right: 87px;">
    <select name="user[state]" value="<%= @user.state %>">
        <option value="TX">TX</option>
        <option value="CO">CO</option>
        <option value="CA">CA</option>
    </select><br>
    Password: <input type="password" name="user[password]"><br>
    Password Confirmation: <input type="password" name="user[password_confirmation]"><br>
    <input type="submit" value="Submit Changes" class="btn btn-primary">
</form>
